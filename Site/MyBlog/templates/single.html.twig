{% extends 'layout.html.twig' %}

{% block title %}{{post.title}}{% endblock %}
{% block stylesheet %}{% endblock %}
{% block body %}
<div class="text-primary">
    <h2>{{post.title}}</h2>
    <p>{{post.description}}</p>
    <p>{{post.author}}</p>
    <p>Créé le : {{post.createdAt}}</p>
</div>
<br>
<div id="comments" class="text-white" style="margin-left: 50px">
    <h3>Commentaires</h3>
    <a href="../public/index.php?route=addComment&postId={{post.id}}">Nouveau commentaire</a>
    {% for comment in comments %}
        <h4>{{comment.pseudo}}</h4>
        <p>{{comment.description}}</p>
        Posté le {{comment.createdAt}}
    {%  endfor %}
</div>
{% endblock %}