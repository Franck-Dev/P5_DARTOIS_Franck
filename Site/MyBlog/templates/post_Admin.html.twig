{% extends 'layout.html.twig' %}

{% block title %}Administration des articles{% endblock %}
{% block stylesheet %}{% endblock %}
{% block body %}
    <h3 class="text-white">Gestion des articles du blog :</h3>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalPost">
            Nouvel article
        </button>
        <!-- Modal -->
        <div class="modal fade" id="ModalPost" tabindex="-1" role="dialog" aria-labelledby="ModalPostLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header  bg-secondary">
                        <h5 class="modal-title text-primary" id="ModalPostLabel">Création Nouvel article :</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-dark">
                        {% include 'form_AddPost.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive-md">
            <table class="table table-striped">
                  <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Description</th>
                        <th scope="col">Chapo</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Date modification</th>
                        <th scope="col">Auteur</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-white">
                    {% for post in posts %}
                        <tr>
                            <th scope="row">{{post.id}}</th>
                            <td>{{post.title}}</td>
                            <td>{{post.description}}</td>
                            <td></td>
                            <td>{{post.createdAt}}</td>
                            <td></td>
                            <td>{{post.author}}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}