{% extends "layout.html.twig" %}
{% block title %}Admin Utilisateurs{% endblock %}
{% block body %}
<h3 class="text-white">Gestion des utilisateurs :</h3>
    <!-- User's Table -->
<div class="table-responsive-md">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">email</th>
                <th scope="col">Profil</th>
                <th scope="col">Statut</th>
                <th scope="col">Date de création</th>
                <th scope="col">Dernière connection</th>
            </tr>
        </thead>
        <tbody class="text-white">
            {% for user in users %}
                <tr>
                    <th scope="row">{{user.id}}</th>
                    <td>{{user.username}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.profil}}</td>
                    <td>{% if user.statut ==1 %}<!-- Checked user's statut-->
                            {% set var = 'checked' %}
                            {% set statut = 'Valide' %}
                        {% else %}
                            {% set var = '' %}
                            {% set statut = 'A valider' %}
                        {% endif %}
                        {% set name = ['SwitchStatut',user.id]|join %}
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="{{name}}" {{var}}>
                            <label class="custom-control-label" for="{{name}}">{{statut}}</label>
                        </div></td>
                    <td>{{user.createdAt}}</td>
                    <td{{user.lastconnect}}td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div><!-- End User's Table -->
{% endblock %}