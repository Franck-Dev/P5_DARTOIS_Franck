{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block stylesheet %}{% endblock %}
{% block body %}
    {# <pre>{{dump(posts)}}</pre> #}
    <div class="row">
        {% for post in posts %}
            <div class="col-xs m-1">
                <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
                    <div class="card-header text-primary bg-dark">
                        <h3> {{post.title}} </h3>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{post.chapo}}</h5>
                        <p class="card-text">{{post.description}}</p>
                        <a href="../public/index.php?route=post&postId={{post.id}}" class="btn btn-primary">En savoir plus</a>
                    </div>
                    <div class="card-footer text">
                        Créé le : {{post.createdAt}} par {{post.user}}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}