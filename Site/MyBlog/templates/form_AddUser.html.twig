<head>
	<title>Login Page</title>   
    <!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<!--Custom styles-->
	<link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
<!--If user connected, templating modification-->
{% if app.get('username') %}
	{% set btn = 'Modifier' %}
	{% set cls = 'btn btn-danger float-right' %}
	{% set title = 'Donn√©es du profil' %}
	{% set route = '../public/index.php?route=profile&UserId=' %}
	{% set date = 'Inscrit depuis le : ' %}
{% else %}
	{% set btn = 'Enregistrer' %}
	{% set cls = 'btn btn-primary float-right' %}
	{% set title = 'Inscription' %}
	{% set route = '../public/index.php?route=register' %}
{% endif %}
<div class="container p-0">
	<div class="d-flex justify-content-center h-100">
		<div class="card"  id="formLogUser">
			<div class="card-header">
				<h3>{{title}}</h3>
			</div>
			<div class="card-body">
				<form class="was-validated" method="post" action="{{route}}">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" name="username" placeholder="username" value="{{app.get('username')}}" required>
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-at"></i></span>
						</div>
						<input type="text" class="form-control" name="email" placeholder="email" value="{{app.get('email')}}" required>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" name="password" placeholder="password" required>
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="Confirme password" required>
					</div>
					<div class="form-group">
						<label class="text-float text-left">{{date}}</label>
						<input type="submit" value="{{btn}}" name="submit" class="{{cls}}">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</body>
